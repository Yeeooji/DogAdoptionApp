<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdminViews.pending_dog_item"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/redLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/item_background"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:elevation="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:translationZ="1dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp">

        <ImageView
            android:id="@+id/dogImgPending"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sample_img"
            android:translationZ="20dp"
            android:layout_marginRight="10dp"/>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:translationZ="20dp">

            <TextView
                android:id="@+id/dogNamePending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.1"
                android:text="Milo"
                android:textColor="#424242"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameAdopt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_adopt"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text="Joey wants to adopt Milo"
                android:textColor="#828282"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/acceptBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:text="Accept"
                    android:textColor="@color/green"
                    android:textSize="10sp"
                    app:strokeColor="@color/green" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/denyBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="Deny"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    app:strokeColor="@color/red" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
